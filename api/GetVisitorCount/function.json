{
  "scriptFile": "__init__.py",
  "bindings": [
    {
      "authLevel": "anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": ["get", "post", "options"],
      "route": "visitor"  // This defines the /api/visitor path
    },
    {
      "type": "http",
      "direction": "out",
      "name": "$return"
    }
  ]
}
